{
  "name": "smart-gamma/pact-behat-extension",
  "description": "Smart Gamma Behat extension for pact.io",
  "license": "MIT",
  "keywords": ["behat","pact","contract", "bdd"],
  "authors": [
    {
      "name": "Evgeniy Kuzmin",
      "email": "evgeniy.k@smart-gamma.com"
    }
  ],
  "type": "library",
  "require": {
    "php" : ">=7.4",
    "behat/behat": "^3.8",
    "pact-foundation/pact-php": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "SmartGamma\\Behat\\PactExtension\\": "src/SmartGamma/Behat/PactExtension"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "spec\\SmartGamma\\Behat\\PactExtension\\": "spec/SmartGamma/Behat/PactExtension"
    }
  },
  "require-dev": {
    "phpspec/phpspec": "^7.2",
    "friends-of-phpspec/phpspec-code-coverage": "^6.0.0",
    "phpstan/phpstan": "^0.12.59"
  }
