{
  "name": "smart-gamma/pact-behat-extension",
  "description": "Smart Gamma Behat extension for pact.io",
  "license": "MIT",
  "keywords": ["behat","pact","contract", "bdd"],
  "authors": [
    {
      "name": "Evgeniy Kuzmin",
      "email": "evgeniy.k@smart-gamma.com"
    },
    {
      "name": "Adam Buntain-Cooper",
      "email": "adam@acpr.dev"
    }
  ],
  "type": "library",
  "require": {
    "php" : "~8.1 || ~8.2 || ~8.3 || ~8.4",
    "behat/behat": "^3.16",
    "pact-foundation/pact-php": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "SmartGamma\\Behat\\PactExtension\\": "src/SmartGamma/Behat/PactExtension"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\SmartGamma\\Behat\\PactExtension\\": "tests/SmartGamma/Behat/PactExtension"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan-symfony": "^2.0"
  }
}
